# Service Catalogue Manager - Environment Variables
# Copy this file to .env.local and fill in the values

# API Configuration
VITE_API_BASE_URL=http://localhost:7071/api
VITE_API_TIMEOUT=30000

# Azure AD Authentication
VITE_AZURE_AD_CLIENT_ID=your-client-id-here
VITE_AZURE_AD_TENANT_ID=your-tenant-id-here
VITE_AZURE_AD_REDIRECT_URI=http://localhost:5173
VITE_AZURE_AD_SCOPE=api://your-api-scope/.default

# Feature Flags
VITE_FEATURE_EXPORT_PDF=true
VITE_FEATURE_EXPORT_MARKDOWN=true
VITE_FEATURE_UUBOOKKIT=true
VITE_FEATURE_DARK_MODE=false

# Application Settings
VITE_APP_NAME=Service Catalogue Manager
VITE_APP_VERSION=1.0.0

# Logging
VITE_LOG_LEVEL=info
VITE_ENABLE_ANALYTICS=false

# UuBookKit Integration
VITE_UUBOOKKIT_BASE_URL=https://uuapp.plus4u.net
VITE_UUBOOKKIT_BOOK_URI=your-book-uri
