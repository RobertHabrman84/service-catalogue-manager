import { PublicClientApplication, LogLevel } from '@azure/msal-browser';

// ========================================
// ðŸ”¥ DEV MODE BYPASS - Vypne MSAL v dev mÃ³du
// ========================================

const isDevelopment = import.meta.env.MODE === 'development';
const skipAuth = import.meta.env.VITE_SKIP_AUTH === 'true' || 
                 import.meta.env.VITE_DEV_MODE === 'true';

// Pokud dev mode a skip auth, pouÅ¾ij mock config
const msalConfig = (isDevelopment && skipAuth) ? {
  auth: {
    clientId: 'dev-bypass-client-id',
    authority: 'https://login.microsoftonline.com/common',
    redirectUri: window.location.origin,
  },
  cache: {
    cacheLocation: 'sessionStorage',
    storeAuthStateInCookie: false,
  },
  system: {
    loggerOptions: {
      logLevel: LogLevel.Warning,
      loggerCallback: () => {}, // Suppress all logs
    },
  },
} : {
  auth: {
    clientId: import.meta.env.VITE_AZURE_AD_CLIENT_ID || '',
    authority: \https://login.microsoftonline.com/\\,
    redirectUri: import.meta.env.VITE_AZURE_AD_REDIRECT_URI || window.location.origin,
  },
  cache: {
    cacheLocation: 'sessionStorage',
    storeAuthStateInCookie: false,
  },
  system: {
    loggerOptions: {
      logLevel: LogLevel.Info,
      loggerCallback: (level: LogLevel, message: string, containsPii: boolean) => {
        if (containsPii) return;
        
        switch (level) {
          case LogLevel.Error:
            console.error(message);
            break;
          case LogLevel.Info:
            console.info(message);
            break;
          case LogLevel.Verbose:
            console.debug(message);
            break;
          case LogLevel.Warning:
            console.warn(message);
            break;
        }
      },
    },
  },
};

// Log bypass status
if (isDevelopment && skipAuth) {
  console.log('ðŸ”¥ MSAL INSTANCE: Bypassed - using mock config');
} else {
  console.log('ðŸ”’ MSAL INSTANCE: Active - using real Azure AD');
}

export const msalInstance = new PublicClientApplication(msalConfig);

// Prevent initialization in dev mode with skip auth
if (isDevelopment && skipAuth) {
  console.log('âœ… MSAL Instance created but will not be used');
} else {
  // Initialize MSAL
  msalInstance.initialize();
}
