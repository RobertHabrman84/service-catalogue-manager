{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Service Catalog Import Schema",
  "description": "Complete JSON schema for importing service catalog items - matches backend ImportServiceModel exactly",
  "type": "object",
  "required": [
    "serviceCode",
    "serviceName",
    "version",
    "category",
    "description"
  ],
  "properties": {
    "serviceCode": {
      "type": "string",
      "pattern": "^ID\\d{3}$",
      "description": "Service code in format ID### (e.g., ID001, ID123, ID999). MUST be exactly 'ID' followed by 3 digits.",
      "examples": [
        "ID001",
        "ID123",
        "ID999"
      ]
    },
    "serviceName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Service name (1-200 characters)"
    },
    "version": {
      "type": "string",
      "default": "v1.0",
      "description": "Service version"
    },
    "category": {
      "type": "string",
      "minLength": 1,
      "description": "Service category (e.g., 'Services/Architecture/Technical Architecture')"
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "description": "Detailed service description"
    },
    "notes": {
      "type": [
        "string",
        "null"
      ],
      "description": "Additional notes (optional)"
    },
    "toolsAndEnvironment": {
      "type": [
        "object",
        "null"
      ],
      "description": "Tools and environment requirements - CRITICAL: All arrays MUST be present",
      "properties": {
        "cloudPlatforms": {
          "type": "array",
          "description": "Cloud platforms (MUST be array, use [] if empty)",
          "items": {
            "type": "object",
            "properties": {
              "category": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "toolName": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "version": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "purpose": {
                "type": [
                  "string",
                  "null"
                ]
              }
            }
          }
        },
        "designTools": {
          "type": "array",
          "description": "Design tools (MUST be array, use [] if empty)",
          "items": {
            "type": "object",
            "properties": {
              "category": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "toolName": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "version": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "purpose": {
                "type": [
                  "string",
                  "null"
                ]
              }
            }
          }
        },
        "automationTools": {
          "type": "array",
          "description": "Automation tools (MUST be array, use [] if empty)",
          "items": {
            "type": "object",
            "properties": {
              "category": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "toolName": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "version": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "purpose": {
                "type": [
                  "string",
                  "null"
                ]
              }
            }
          }
        },
        "collaborationTools": {
          "type": "array",
          "description": "Collaboration tools (MUST be array, use [] if empty - CANNOT be null!)",
          "items": {
            "type": "object",
            "properties": {
              "category": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "toolName": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "version": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "purpose": {
                "type": [
                  "string",
                  "null"
                ]
              }
            }
          }
        },
        "other": {
          "type": "array",
          "description": "Other tools (MUST be array, use [] if empty)",
          "items": {
            "type": "object",
            "properties": {
              "category": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "toolName": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "version": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "purpose": {
                "type": [
                  "string",
                  "null"
                ]
              }
            }
          }
        }
      },
      "required": [
        "cloudPlatforms",
        "designTools",
        "automationTools",
        "collaborationTools",
        "other"
      ]
    }
  },
  "additionalProperties": true
}