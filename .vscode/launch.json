{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Frontend: React Dev Server",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/src/frontend",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      }
    },
    {
      "name": "Backend: Attach to Azure Functions",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    },
    {
      "name": "Backend: Azure Functions",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "func: host start",
      "program": "${workspaceFolder}/src/backend/ServiceCatalogueManager.Api/bin/Debug/net8.0/ServiceCatalogueManager.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/backend/ServiceCatalogueManager.Api",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": "Backend: Unit Tests",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-tests",
      "program": "dotnet",
      "args": [
        "test",
        "${workspaceFolder}/src/backend/ServiceCatalogueManager.Api.Tests/ServiceCatalogueManager.Api.Tests.csproj",
        "--no-build"
      ],
      "cwd": "${workspaceFolder}/src/backend/ServiceCatalogueManager.Api.Tests",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": "E2E: Playwright Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/tests/e2e/node_modules/.bin/playwright",
      "args": ["test", "--headed"],
      "cwd": "${workspaceFolder}/tests/e2e",
      "console": "integratedTerminal"
    },
    {
      "name": "E2E: Playwright Debug",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/tests/e2e/node_modules/.bin/playwright",
      "args": ["test", "--debug"],
      "cwd": "${workspaceFolder}/tests/e2e",
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack: Frontend + Backend",
      "configurations": [
        "Backend: Azure Functions",
        "Frontend: React Dev Server"
      ],
      "stopAll": true
    }
  ]
}
